<div class="container">
  {{!-- Display the page title. --}}
  <div class="row" id="first-row">
    <div align="center" class="col-md-12">
      <h1>Saved Articles</h1>
      <h3>Your Saved Articles</h3>
    </div>
  </div>
  <div class="row" id="second-row">
    <div class="col-md-12">
    <ol>
      {{#each articles}}
        <li>
          <p class="title" data-tile="{{title}}">Title: {{title}}</p>
          <button class= "btn btn-warning add-note" data-articleId="{{_id}}">Article Notes</button>
          <button class="btn btn-warning delete-saved" data-articleId="{{_id}}" data-status={{isSaved}}>Delete from Saved</button>
          <p>Link: {{link}}</p>
          <p>Summary: {{summary}}</p>
        </li>
      {{/each}}
    </ol>
    </div>
  </div>
</div>

<!-- Modal form. -->
<!-- Modal -->
<div class="modal fade" id="noteModal" role="dialog" data-articleID="">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        {{!-- dynamically add article title --}}
        <h4 class="modal-title"></h4>
      </div>
      <div class="modal-body">
       <div class="existing-note">
          {{!-- dynamically add articles notes here  --}}
       </div>
        {{!-- add a new note --}}
       <div class="add-note-form">
          <div class="panel panel-default" align="center">
            <div class="panel-body">
            <form id="creat-note-form">
              <p>Add a note</p>
              <textarea id="note-body" style="width:100%"></textarea>
              <br>
              <button id="submit-note" class="btn btn-primary">Submit</button>
              </form>
            </div>
          </div>
       </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>    
  </div>
</div>
