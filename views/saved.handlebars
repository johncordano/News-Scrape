<div class="container">
  {{!-- Display the page title. --}}
  <div class="row" id="first-row">
    <div align="center" class="col-md-12">
      <h1>Saved Articles</h1>
      <h3>Your Saved Articles</h3>
    </div>
  </div>
  <div class="row" id="second-row">
    <div class="col-md-12">
    <ol>
      {{#each articles}}
        <li>
          Title: {{title}}<br>
          <button class= "btn btn-warning change-note">Article Notes</button><br><br>
          <button class="btn btn-warning delete-saved">Delete from Saved</button><br><br>
          Link: {{link}}<br>
          Summary: {{summary}}<br><br>
        </li>
      {{/each}}
    </ol>
    </div>
  </div>
</div>

<!-- Modal form. -->
<div class="results-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Notes for Article:</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="existing-note-form" action="/newnote" method="POST">
        </form>
        <form id="new-note-form" action="/newnote" method="POST">
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Save Note</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>